@model FinalElectron.Models.ProductOption

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>ProductOption</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Product.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Product.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Product.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label>Catagory</label>
            <select class="form-control" name="CatagoryId" id="catId">
                <option value="0">Choose</option>
                @foreach (var item in ViewBag.Catagories)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label>Sub Catagory</label>
            <select class="form-control" name="Product.SubCategoryId" id="subCatId">
                <option value="0">Choose</option>

            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label>Brand</label>
            <select class="form-control" name="BrandId" id="brandId">
                <option value="0">Choose</option>
                @foreach (var item in ViewBag.Brands)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <label>Model</label>
            <select class="form-control" name="Product.ModelId" id="modelId">
                <option value="0">Choose</option>

            </select>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Product.Content, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Product.Content, new { @class = "form-control", @id = "cktext" })
            @Html.ValidationMessageFor(model => model.Product.Content, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row ml-2">
        <div class="form-group col-md-3">
            <div class="">
                <label>Color</label>
                <select class="form-control" name="ColorIds">
                    <option value="0">Choose</option>
                    @foreach (var item in ViewBag.Colors)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.Quantities, htmlAttributes: new { @class = "control-label" })
            <div class="">
                <input type="number" name="Quantities" class="form-control" value="1" />
                @Html.ValidationMessageFor(model => model.Quantities, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.Prices, htmlAttributes: new { @class = "control-label" })
            <div class="">
                <input type="text" name="Prices" class="form-control" value="0" />
                @Html.ValidationMessageFor(model => model.Prices, "", new { @class = "text-danger" })
            </div>
        </div>



        <span id="AddColor" class="btn btn-primary col-md-1 h-50 mt-4">++</span>
    </div>

    <div class="form-row ml-2" id="colorContainer">

    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.Product.ImageFile, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Product.ImageFile, new { @class = "form-control", @type = "file", @multiple = "multiple" })
            @Html.ValidationMessageFor(model => model.Product.ImageFile, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Product.HoverImageFile, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Product.HoverImageFile, new { @class = "form-control", @type = "file" })
            @Html.ValidationMessageFor(model => model.Product.HoverImageFile, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-check">
        @Html.CheckBoxFor(model => model.Product.IsSpecial)
        <label class="form-check-label" for="defaultCheck1">
            Is Special
        </label>
    </div>



    <input type="hidden" name="AddedDate" value="@DateTime.Now" />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section CKEditor {
    <script src="//cdn.ckeditor.com/4.14.1/standard/ckeditor.js"></script>
}